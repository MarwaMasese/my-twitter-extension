{
  "manifest_version": 3,
  "name": "Twitter Inspect Button",
  "version": "1.0",
  "description": "A browser extension that adds an Inspect button to the Twitter profile page for bitcoin.com.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://twitter.com/bitcoin/*",
      "*://twitter.com/bitcoin/*"
    ],
      "js": ["contentScript.js"]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  }
}
